# Database
DATABASE_URL="file:./dev.db"

# Authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# External API Tokens (optional for development)
CIVITAI_API_TOKEN="your-civitai-api-token"
HUGGINGFACE_API_TOKEN="your-huggingface-api-token"
GITHUB_API_TOKEN="your-github-api-token"

# Encryption (for storing user API tokens)
ENCRYPTION_KEY="your-encryption-key-here"

# Feature Flags
ENABLE_ADMIN_REGISTRATION="false"
ENABLE_PUBLIC_DEPLOYMENTS="true"

# Production Database (when migrating to PostgreSQL)
# DATABASE_URL="postgresql://user:password@localhost:5432/comfyui_builder"

# Optional: Redis for caching (production)
# REDIS_URL="redis://localhost:6379"

# Optional: Email configuration (for notifications)
# EMAIL_SERVER="smtp://username:password@smtp.example.com:587"
# EMAIL_FROM="noreply@comfyui-builder.com"